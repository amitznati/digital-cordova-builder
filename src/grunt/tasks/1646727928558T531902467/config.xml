    <!-- Global Configurations -->
    <icon src="res/icons/ios/icon.png" />

    <preference name="ScrollEnabled" value="true" />
    <preference name="WKSuspendInBackground" value="false" />
    <preference name="WKWebViewOnly" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="ContentUpdateURL" value="http://10.0.0.6:7000/api/update-provider/getLatestVersionByAppId" />
    <preference name="ContentUpdateEnabled" value="false" />
    <preference name="ApplicationID" value="app" />
    <preference name="SplashScreenDelay" value="5000" />



</widget>
