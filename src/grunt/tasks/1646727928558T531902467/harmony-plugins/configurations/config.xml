<?xml version='1.0' encoding='utf-8'?>
<widget id="com.attia" version="1.0.0" 
xmlns="http://www.w3.org/ns/widgets"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>My Account by Harmony</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <allow-navigation href="*" />
    <allow-navigation href="uxfme://*/*" />
    <allow-navigation href="file://*/*" />

    <access origin="*" />
    <access origin="uxfme://*/*" />
    <access origin="file://*/*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="uxfme://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="26" />
        <allow-intent href="market:*" />
        <content src="content/uscc-mobile/start.html" />
        <preference name="Scheme" value="file" />
        <preference name="Hostname" value="android_asset" />
        <preference name="customEntryPoint" value="content/uscc-mobile/start.html" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
            <application android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher" />

        </edit-config>
        <preference name="ContentUpdateEnabled" value="true" />
        <!-- Assets Configuration -->
        <!-- you can use any density that exists in the Android project -->
        <!-- Splash - Portrait -->
        <splash src="res/screen/android/portrait/hdpi-port.png" density="port-hdpi"/>
        <splash src="res/screen/android/portrait/ldpi-port.png" density="port-ldpi"/>
        <splash src="res/screen/android/portrait/mdpi-port.png" density="port-mdpi"/>
        <splash src="res/screen/android/portrait/xhdpi-port.png" density="port-xhdpi"/>
        <!-- Splash - Portrait -->
        <splash src="res/screen/android/landscape/hdpi-land.png" density="land-hdpi"/>
        <splash src="res/screen/android/landscape/ldpi-land.png" density="land-ldpi"/>
        <splash src="res/screen/android/landscape/mdpi-land.png" density="land-mdpi"/>
        <splash src="res/screen/android/landscape/xhdpi-land.png" density="land-xhdpi"/>


    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="iosScheme" value="uxfme" />
        <preference name="Hostname" value="wesit10.we-nonprod.uscc.com/content/uscc-mobile/start.html" />
        <content src="content/uscc-mobile/start.html" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarStyle" value="default" />

        <!-- Assets Configuration 
        <splash src="res/screen/ios/portrait/320x480.png" width="320" height="480"/>
        <splash src="res/screen/ios/portrait/640x960" width="640" height="960"/>
        <splash src="res/screen/ios/portrait/768x1024.png" width="768" height="1024"/>
        <splash src="res/screen/ios/portrait/1536x2048.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/landscape/1024x768.png" width="1024" height="768"/>
        <splash src="res/screen/ios/landscape/2048x1536.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/portrait/640x1136.png" width="640" height="1136"/>
        <splash src="res/screen/ios/portrait/750x1334.png" width="750" height="1334"/>
        <splash src="res/screen/ios/landscape/2208x1242.png" width="2208" height="1242"/>
        -->


        <splash src="res/screen/ios/portrait/Default@2x~iphone~comany.png" />
        <splash src="res/screen/ios/landscape/Default@2x~iphone~comcom.png" />
        <splash src="res/screen/ios/landscape/Default@3x~iphone~anycom.png" />
        <splash src="res/screen/ios/portrait/Default@3x~iphone~anyany.png" />


        <!-- Icons -->
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icons/ios/180x180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        
        <icon src="res/icons/ios/120x120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icons/ios/76x76.png" width="76" height="76" />
        <icon src="res/icons/ios/152x152.png" width="152" height="152" />
        <!-- Spotlight Icon 
        <icon src="res/ios/icon-40.png" width="40" height="40" />
        <icon src="res/ios/icon-40@2x.png" width="80" height="80" />
        -->
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/icons/ios/57x57.png" width="57" height="57" />
        <icon src="res/icons/ios/114x114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icons/ios/72x72.png" width="72" height="72" />
        <icon src="res/icons/ios/144x144.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="res/icons/ios/167x167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon 
        <icon src="res/ios/icon-small.png" width="29" height="29" />
        <icon src="res/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="res/ios/icon-small@3x.png" width="87" height="87" />
        -->
        <!-- iPad Spotlight and Settings Icon
        <icon src="res/ios/icon-50.png" width="50" height="50" />
        <icon src="res/ios/icon-50@2x.png" width="100" height="100" />
         -->
        <!-- iPad Pro -->
        <icon src="res/icons/ios/167x167.png" width="167" height="167" />
    </platform>
    <!-- Global Configurations -->
    <icon src="res/app-icon.png" /> 

    <preference name="ScrollEnabled" value="true" />
    <preference name="WKSuspendInBackground" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="WKWebViewOnly" value="true" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="ContentUpdateURL" value="http://10.18.1.229:7000/api/update-provider/getLatestVersionByAppId" />
    <preference name="ContentUpdateEnabled" value="true" />
    <preference name="ApplicationID" value="myapp" />

    <preference name="SplashScreenDelay" value="5000" />



</widget>
